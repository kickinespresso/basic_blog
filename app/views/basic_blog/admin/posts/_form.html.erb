
<%= simple_form_for(['admin', @post]) do |f| %>
    <%= f.input :title %>
    <%= f.input :excerpt %>
    <%= f.input :tag_list %>
    <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
    <%= f.input :published_at, as: :date_time_picker, label: "Publish Date/Time", input_html: { style: "display: inline;" } %>

    <%= f.button :submit %>

<% end %>
